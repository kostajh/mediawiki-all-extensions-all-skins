{
	"root": true,
	"extends": [
		"wikimedia/client",
		"wikimedia/jquery",
		"wikimedia/mediawiki"
	],
	"globals": {
		"jQuery": false
	},
	"rules": {
		"one-var": "warn",
		"vars-on-top": "warn",
		"max-statements-per-line": "warn",
